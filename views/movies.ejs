<!DOCTYPE html>
<head>
    <title>Movie Search App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <h1 id="top"> Search Result <span></span><%= searchQuery.toUpperCase() %></h1>

    <% data['results'].forEach((movie) => { %>

        <div class="card mb-4 w-75"> 
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2<%=movie["poster_path"] %>" class="card-img img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title"><%= movie["original_title"] %></h2>
                        <br>
                        <p class="card-text"><%= movie["overview"] %></p>
                        <br>
                        <br>
                        <p class="card-text"><b>Date Published</b> <%= movie["release_date"] %></p>
                        <p class="card-text"><b>Total Votes</b> <%= movie["vote_count"] %></p>
                        <p class="card-text"><b>Average Ratings</b> <%= movie["vote_average"] %></p>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>


</body>
</html>